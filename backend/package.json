{
  "name": "appliance-buddy-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Express.js backend for Appliance Buddy application",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc && tsc-alias -p tsconfig.paths.json",
    "start": "tsx src/app.ts",
    "postinstall": "npm run build",
    "start:dev": "tsx src/app.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit up:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:migrate-manual": "tsx src/utils/runMigration.ts",
    "db:migrate-auth": "tsx src/utils/runAuthMigration.ts",
    "db:handle-existing": "tsx src/utils/handleExistingData.ts",
    "db:create-mock-users": "tsx src/utils/createMockUsers.ts",
    "db:seed": "tsx src/utils/seedDatabase.ts",
    "railway:build": "npm run build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "postgres": "^3.4.3",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.0",
    "esbuild-register": "^3.6.0",
    "tsc-alias": "^1.8.16"
  },
  "keywords": [
    "express",
    "typescript",
    "postgresql",
    "drizzle-orm",
    "rest-api"
  ],
  "author": "",
  "license": "ISC"
}
